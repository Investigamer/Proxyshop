#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import get_font proxyshop.gui.get_font
#:import HoverButton proxyshop.gui.HoverButton
#:import Thread threading.Thread
#:import cfg proxyshop.settings.cfg

<TabbedPanelHeader>
    cols: 5

<ProxyshopPanels>:
    orientation: "vertical"
    AppTabs:
        do_default_tab: False
        tab_width: 120
        tab_height: 30
        tab_spacing: 0
        padding: app.cont_padding
        canvas:
            Color:
                rgb: get_color_from_hex('#2e2e2e')
            Rectangle:
                size: self.size
                pos: self.pos
        ProxyshopTab:
            text: "Render Cards"
            spacing: 0
            BoxLayout:
                id: container
                orientation: "vertical"
                padding: 0
                spacing: 0
                GridLayout:
                    cols: 5
                    rows: 2
                    padding: [2,3,2,1]
                    spacing: [1,2]
                    size_hint: (1, None)
                    height: 70
                    canvas:
                        Color:
                            rgba: get_color_from_hex("#000000")
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    SettingButton:
                        text: "Auto Set Symbol"
                        font_size: 16
                        state: self.initial_state(cfg.auto_symbol)
                        on_state: cfg.update_setting(self.state, 'auto_symbol')
                    SettingButton:
                        text: "Auto Symbol Size"
                        font_size: 16
                        state: self.initial_state(cfg.auto_symbol_size)
                        on_state: cfg.update_setting(self.state, 'auto_symbol_size')
                    SettingButton:
                        text: "Flavor Divider"
                        font_size: 16
                        state: self.initial_state(cfg.flavor_divider)
                        on_state: cfg.update_setting(self.state, 'flavor_divider')
                    SettingButton:
                        text: "Reverse Scryfall"
                        font_size: 16
                        state: self.initial_state(cfg.scry_ascending)
                        on_state: cfg.update_setting(self.state, 'scry_ascending')
                    HoverButton:
                        id: rend_targ_btn
                        text: "Render Target"
                        font_size: 18
                        on_press: Thread(target=app.render_target, daemon=True).start()
                        background_color: get_color_from_hex("#376aa3")
                    SettingButton:
                        text: "No Reminder Text"
                        font_size: 16
                        state: self.initial_state(cfg.remove_reminder)
                        on_state: cfg.update_setting(self.state, 'remove_reminder')
                    SettingButton:
                        text: "No Flavor Text"
                        font_size: 16
                        state: self.initial_state(cfg.remove_flavor)
                        on_state: cfg.update_setting(self.state, 'remove_flavor')
                    SettingButton:
                        text: "Manual Edit Step"
                        font_size: 16
                        state: self.initial_state(cfg.exit_early)
                        on_state: cfg.update_setting(self.state, 'exit_early')
                    SettingButton:
                        text: "Skip Failed Cards"
                        font_size: 16
                        state: self.initial_state(cfg.skip_failed)
                        on_state: cfg.update_setting(self.state, 'skip_failed')
                    HoverButton:
                        id: rend_all_btn
                        text: "Render All"
                        font_size: 18
                        on_press: Thread(target=app.render_all, daemon=True).start()
                        background_color: get_color_from_hex("#376aa3")
                TemplateModule:
                    tab_pos: "top_mid"
                    do_default_tab: False
                    tab_spacing: 0
                    tab_height: 26
                    size_hint: (1, 2)
                    pos: -5,0
                    canvas:
                        Color:
                            rgb: get_color_from_hex('#2e2e2e')
                        Rectangle:
                            size: self.size
                            pos: self.pos
        CreatorTab:
            text: "Custom Creator"

<TabbedPanelItem>:
    pos: 0,0
    spacing: 0
    orientation: "vertical"

<TemplateList>:
    padding: 0
    spacing: 0
    size_hint: (1,None)
    height: self.minimum_height
    cols: 1

<TemplateView>:
    bar_width: 4
    always_overscroll: False
    do_scroll_x: False
    size_hint: (1,1)
    scroll_wheel_distance: 40

<TemplateButton>:
    on_press: app.select_template(self)
    size_hint: (1,None)
    height: 30
