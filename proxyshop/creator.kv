<CreatorPanels>:
    do_default_tab: False
    tab_width: 120
    tab_height: 30
    tab_spacing: 0

<CreatorNormalLayout>:
    id: creator_norm
    cols: 1
    BoxLayout:
        size_hint_y: .75
        orientation: "horizontal"
        valign: "middle"
        InputItem:
            id: name
            hint_text: "Card Name"
            multiline: False
            size_hint_x: 2
            font_size: 20
            font_name: get_font("Beleren-Bold.ttf")
            padding: [6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6, 0]
        InputItem:
            id: mana_cost
            hint_text: "{1}{W}{U}{B}{R}{G}"
            multiline: False
            font_name: get_font("MPlantin.ttf")
            padding: [6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6, 0]
        InputItem:
            id: color_identity
            hint_text: "WUBRG"
            size_hint_x: .5
            multiline: False
            halign: "center"
            font_name: get_font("MPlantin.ttf")
            padding: [6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6, 0]
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 2
        InputItem:
            id: oracle_text
            font_size: 20
            font_name: get_font("MPlantin.ttf")
            hint_text: "Rules text"
    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, 2)
        InputItem:
            id: flavor_text
            font_size: 20
            font_name: get_font("MPlantin-Italic.ttf", "Roboto-Italic")
            hint_text: "Flavor text"
    BoxLayout:
        size_hint_y: .75
        orientation: "horizontal"
        InputItem:
            id: type_line
            text: "Type — Subtype"
            size_hint_x: 5
            multiline: False
            font_size: 20
            font_name: get_font("Beleren-Bold.ttf")
            padding: [6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6, 0]
    BoxLayout:
        size_hint_y: .75
        orientation: "horizontal"
        FourNumInput:
            id: collector_number
            hint_text: "001"
            size_hint_x: .12
            multiline: False
            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            halign: "center"
        FourNumInput:
            id: card_count
            hint_text: "100"
            size_hint_x: .12
            multiline: False
            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            halign: "center"
        FourCharInput:
            id: set
            hint_text: "SET"
            size_hint_x: .12
            multiline: False
            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            halign: "center"
        InputItem:
            id: keywords
            hint_text: "Keyword,Keyword 2"
            multiline: False
            padding: [6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6, 0]
        TwoNumInput:
            id: power
            hint_text: "1"
            size_hint_x: .08
            multiline: False
            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            halign: "center"
        Label:
            text: "/"
            size_hint_x: .05
        TwoNumInput:
            id: toughness
            hint_text: "1"
            size_hint_x: .08
            multiline: False
            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            halign: "center"
    BoxLayout:
        size_hint_y: .75
        orientation: "horizontal"
        InputItem:
            id: artist
            hint_text: "Artist"
            size_hint_x: 2.5
            multiline: False
            font_name: get_font("Beleren-Bold.ttf")
            padding: [6, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6, 0]
        Spinner:
            id: rarity
            text: "Common"
            values: ["Common", "Uncommon", "Rare", "Mythic"]
        Spinner:
            id: template
            text: "Normal"
            values: root.templates
            on_text: root.select_template(self)
        HoverButton:
            id: render_norm
            text: "Render Custom"
            font_size: 16
            background_color: get_color_from_hex("#376aa3")
            font_name: get_font("Beleren Small Caps.ttf")
            on_press: Thread(target=root.render, args=(app,), daemon=True).start()

